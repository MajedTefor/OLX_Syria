<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/olxDark</item>
    </style>

    <style name="CreateNewAdTitlesTV" parent="TextAppearance.AppCompat">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/olxDark</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="TextInputLayoutErrorRed" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/olxDark</item>
    </style>

    <style name="TextInputLayoutErrorGreen" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/olxGreen</item>
    </style>

</resources>
