<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.olx.smartlife_solutions.olx_syria.PreviewAddActivity">

    <ScrollView
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v4.view.ViewPager
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="#fff"
                android:id="@+id/itemsSliderVP"
                />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab"
                app:backgroundTint="#cc1c1c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                app:layout_anchor="@id/itemsSliderVP"
                android:layout_gravity="right"
                android:layout_marginTop="-26dp"
                android:layout_marginRight="16dp"
                app:srcCompat="@mipmap/ic_heart" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Item name will go over here"
                android:textSize="25sp"
                android:paddingLeft="13dp"
                android:id="@+id/titleTV"
                android:paddingRight="13dp"
                android:textAlignment="center"
                android:textColor="#202020"
                android:layout_marginBottom="10dp"
                />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="13dp"
                android:paddingRight="13dp"
                android:gravity="center">

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@mipmap/ic_date"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/dateTV"
                        android:text="20/10/2017"
                        android:layout_marginLeft="3dp"
                        android:textSize="14sp"
                        android:textColor="#232323"
                        />
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="1dp"
                    android:background="#ddd"
                    android:layout_height="match_parent"/>
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@mipmap/ic_user"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/userTV"
                        android:text="Majed Tefor"
                        android:layout_marginLeft="3dp"
                        android:textSize="14sp"
                        android:textColor="#232323"
                        />
                </LinearLayout>
            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#ddd"
                android:layout_margin="16dp"/>

            <TextView
                android:id="@+id/priceTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="22dp"
                android:background="@drawable/price_bg"
                android:padding="12dp"
                android:text="200000000 S.P"
                android:textAlignment="center"
                android:textColor="@color/olxLight"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="13dp"
                android:paddingRight="13dp"
                android:layout_marginBottom="20dp"
                android:gravity="center">

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@mipmap/ic_heart_grey"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/heartsTV"
                        android:text="500"
                        android:layout_marginLeft="3dp"
                        android:textSize="20sp"
                        android:textColor="#232323"
                        />
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="1dp"
                    android:background="#ddd"
                    android:layout_height="match_parent"/>
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@mipmap/ic_views"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/viewsTV"
                        android:text="500"
                        android:layout_marginLeft="3dp"
                        android:textSize="20sp"
                        android:textColor="#232323"
                        />
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="65dp"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/map_draft"
                    android:scaleType="centerCrop"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textSize="18sp"
                    android:textColor="#000"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:padding="8dp"
                    android:id="@+id/locationTV"
                    android:background="@drawable/map_text_bg"
                    android:text="Syria, Lattakia, Shekhdaher"
                    android:textAlignment="center"/>

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textSize="19sp"
                android:textColor="@color/olxLight"
                android:layout_margin="16dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/large_text"
                android:textSize="15sp"
                android:id="@+id/desTV"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="16dp"
                />


        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/olxLight"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/bottom_nav_style"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/locationNavBtn"
            android:contentDescription="Home"
            android:layout_width="0dp"
            android:src="@mipmap/ic_location"
            android:scaleType="fitCenter"
            android:padding="10dp"
            android:background="#00000000"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <ImageButton
            android:id="@+id/callNavBtn"
            android:contentDescription="Home"
            android:layout_width="0dp"
            android:src="@mipmap/ic_call"
            android:scaleType="fitCenter"
            android:padding="10dp"
            android:background="#00000000"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <ImageButton
            android:id="@+id/sendMsgNavBtn"
            android:contentDescription="Home"
            android:layout_width="0dp"
            android:src="@mipmap/ic_chat"
            android:scaleType="fitCenter"
            android:padding="10dp"
            android:background="#00000000"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </LinearLayout>



</LinearLayout>
