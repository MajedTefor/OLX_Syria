<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/userChatItem"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@color/cardview_shadow_start_color">
        <ImageView
            android:id="@+id/userChatImage"
            android:layout_gravity="center_vertical"
            android:layout_width="75dp"
            android:layout_height="75dp"
            app:srcCompat="@drawable/olx_logo"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginLeft="15dp">
            <TextView
                android:id="@+id/userChatName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chat with"
                android:textSize="25dp"
                android:textColor="@color/olxDark"/>
            <TextView
                android:id="@+id/userChatLastMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Last Message"
                android:textColor="@color/olxLight"
                android:textSize="18dp"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>