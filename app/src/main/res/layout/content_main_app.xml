<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.olx.smartlife_solutions.olx_syria.MainApp"
    tools:showIn="@layout/app_bar_main_app">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <include layout="@layout/fragment_viewer"/>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/olxLight"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/bottom_nav_style"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/homeBtn"
            android:contentDescription="Home"
            android:layout_width="0dp"
            android:src="@drawable/home"
            android:scaleType="fitCenter"
            android:padding="13dp"
            android:background="#00000000"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <ImageButton
            android:id="@+id/favBtn"
            android:contentDescription="Favourites"
            android:layout_width="0dp"
            android:src="@drawable/heart"
            android:scaleType="fitCenter"
            android:padding="13dp"
            android:background="#00000000"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <ImageButton
            android:id="@+id/addNewAdBtn"
            android:contentDescription="Create New Ad"
            android:layout_width="0dp"
            android:src="@drawable/add"
            android:scaleType="fitCenter"
            android:padding="4dp"
            android:background="#00000000"
            android:layout_height="match_parent"
            android:layout_weight="1.7"/>
        <ImageButton
            android:id="@+id/chatsBtn"
            android:contentDescription="Messages"
            android:layout_width="0dp"
            android:src="@drawable/chat"
            android:scaleType="fitCenter"
            android:padding="13dp"
            android:background="#00000000"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <ImageButton
            android:id="@+id/accountBtn"
            android:contentDescription="Account"
            android:layout_width="0dp"
            android:src="@drawable/user"
            android:scaleType="fitCenter"
            android:padding="13dp"
            android:background="#00000000"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

    </LinearLayout>


</LinearLayout>
