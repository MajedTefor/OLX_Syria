<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    tools:context="layout.NoInternetFragment"
    android:id="@+id/internetFragment">

    <android.support.design.widget.CoordinatorLayout
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                android:text="Oops :("
                android:textColor="@color/olxDark"
                android:textSize="25dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                android:gravity="center"
                android:text="No internet Connection, Check your network then click RETRY"
                android:textSize="18dp" />

            <Button
                android:id="@+id/btnRetryConnection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/olxLight"
                android:text="RETRY"
                android:textColor="@android:color/background_light"
                android:textSize="15dp" />
        </LinearLayout>

    </android.support.design.widget.CoordinatorLayout>

</FrameLayout>
