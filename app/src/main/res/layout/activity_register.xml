<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.olx.smartlife_solutions.olx_syria.RegisterActivity"
    tools:layout_editor_absoluteY="0dp"
    tools:layout_editor_absoluteX="0dp"
    android:id="@+id/registerActivityView">

    <ScrollView
        android:layout_height="495dp"
        android:layout_width="368dp"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp">


        <LinearLayout
            android:id="@+id/registerForm"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:paddingTop="20dp"
            android:paddingBottom="50dp"
            android:weightSum="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/yourName"
                android:textSize="12sp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/nameView"
                    android:hint="Your Name"
                    android:textSize="16sp"
                    android:layout_weight="1" />

                <TextView
                    android:text="×"
                    android:layout_height="match_parent"
                    android:id="@+id/xName"
                    android:layout_weight="1"
                    android:textSize="25sp"
                    android:textAlignment="center"
                    android:layout_width="50dp"
                    android:gravity="center|end"
                    android:textAllCaps="true"
                    android:visibility="gone"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/errorName"
                android:textColor="@color/errorText"
                android:textSize="12sp" />
            <!-- Name -->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/yourEmail"
                android:textSize="12sp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:ems="10"
                    android:id="@+id/emailView"
                    android:hint="Your Email"
                    android:layout_weight="1" />

                <TextView
                    android:text="×"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="25sp"
                    android:textAlignment="center"
                    android:layout_width="50dp"
                    android:gravity="center|end"
                    android:textAllCaps="true"
                    android:visibility="gone"
                    android:id="@+id/xEmail" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/errorEmail"
                android:textColor="@color/errorText"
                android:textSize="12sp" />
            <!-- Email -->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/yourPhone"
                android:textSize="12sp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="phone"
                    android:ems="10"
                    android:id="@+id/phoneView"
                    android:hint="Your Phone"
                    android:layout_weight="1" />

                <TextView
                    android:text="×"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="25sp"
                    android:textAlignment="center"
                    android:layout_width="50dp"
                    android:gravity="center|end"
                    android:textAllCaps="true"
                    android:visibility="gone"
                    android:id="@+id/xPhone" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/errorPhone"
                android:textColor="@color/errorText"
                android:textSize="12sp" />
            <!-- phone -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/yourPassword"
                android:textSize="12sp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:ems="10"
                    android:id="@+id/passwordView"
                    android:hint="Your Password"
                    android:layout_weight="1" />

                <TextView
                    android:text="×"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="25sp"
                    android:textAlignment="center"
                    android:layout_width="50dp"
                    android:gravity="center|end"
                    android:textAllCaps="true"
                    android:visibility="gone"
                    android:id="@+id/xPassword" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/errorPassword"
                android:textColor="@color/errorText"
                android:textSize="12sp" />
            <!-- password -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/yourRePassword"
                android:textSize="12sp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:ems="10"
                    android:id="@+id/passwordView2"
                    android:hint="ReType Password"
                    android:layout_weight="1" />

                <TextView
                    android:text="×"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="25sp"
                    android:textAlignment="center"
                    android:layout_width="50dp"
                    android:gravity="center|end"
                    android:textAllCaps="true"
                    android:visibility="gone"
                    android:id="@+id/xRePassword" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/errorRePassword"
                android:textColor="@color/errorText"
                android:textSize="12sp" />
            <!-- repasssword -->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/yourCountry"
                android:textSize="12sp" />

            <Spinner
                android:layout_width="match_parent"
                android:id="@+id/selectCountry"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:layout_height="30dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/errorCountry"
                android:textColor="@color/errorText"
                android:textSize="12sp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:onClick="toggleCheck"
                style="@android:style/Widget.Holo.Button.Borderless">

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/agreeCheckBox" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/termsServices"
                    android:text="By clicking Register, I agree to your Terms of Use"
                    android:textSize="13sp"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/errorCheck"
                android:textColor="@color/errorText"
                android:textSize="12sp" />

            <TextView
                android:text="see Terms of Use"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_gravity="right"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/toRules"
                android:onClick="goToRules"
                android:textColor="@color/colorPrimaryDark" />

            <Button
                android:text="Register"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/registerBTN"
                android:textSize="18sp"
                android:layout_weight="0.24" />

        </LinearLayout>
