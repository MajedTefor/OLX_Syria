<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccountFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/editLayout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="20dp"
            android:paddingLeft="50dp"
            android:paddingRight="50dp">
            <LinearLayout
                android:id="@+id/userInformation"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Your Name:"
                        android:textSize="20dp"
                        android:textColor="@color/olxDark"/>
                    <TextView
                        android:id="@+id/nowName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="Ahmad"
                        android:textSize="18dp"
                        android:textColor="@color/dark_color"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Your Phone:"
                        android:textSize="20dp"
                        android:textColor="@color/olxDark"/>
                    <TextView
                        android:id="@+id/nowPhone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="0951784957"
                        android:textSize="18dp"
                        android:textColor="@color/dark_color"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Your Password:"
                        android:textSize="20dp"
                        android:textColor="@color/olxDark"/>
                    <TextView
                        android:id="@+id/nowPassword"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="111aaa"
                        android:textSize="18dp"
                        android:textColor="@color/dark_color"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/newNameLayout"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">
                <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <EditText
                        android:id="@+id/newName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Your New Name"/>
                </android.support.design.widget.TextInputLayout>
                <TextView
                    android:id="@+id/undoNewName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="UNDO"
                    android:textColor="@color/dark_color"
                    android:textStyle="bold"/>
            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/newPhoneLayout"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">
                <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <EditText
                        android:id="@+id/newPhone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Your New Phone"/>
                </android.support.design.widget.TextInputLayout>
                <TextView
                    android:id="@+id/undoNewPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="UNDO"
                    android:textColor="@color/dark_color"
                    android:textStyle="bold"/>
            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/newPasswordLayout"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">
                <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <EditText
                        android:id="@+id/newPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Your New Password"/>
                </android.support.design.widget.TextInputLayout>
                <TextView
                    android:id="@+id/undoNewPassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="UNDO"
                    android:textColor="@color/dark_color"
                    android:textStyle="bold"/>
            </LinearLayout>
            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">
                <Button
                    android:id="@+id/saveNewInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SAVE"
                    android:background="@color/dark_color"
                    android:textColor="#fff"
                    android:layout_alignParentLeft="true"
                    android:textStyle="bold"/>
                <Button
                    android:id="@+id/cancelNewInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cancel"
                    android:background="@color/dark_color"
                    android:textColor="#fff"
                    android:layout_alignParentRight="true"
                    android:textStyle="bold"/>
            </RelativeLayout>
        </LinearLayout>

    </ScrollView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/myAdsRecycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <RelativeLayout
        android:id="@+id/relative_hide"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:id="@+id/editNameLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="230dp"
            android:layout_marginRight="30dp"
            android:orientation="horizontal">
        <TextView
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Name"
            android:textSize="20dp"
            android:layout_marginRight="15dp"
            android:textColor="@color/olxDark"
            android:background="#fff"
            android:padding="5dp"/>
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fabEditName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:srcCompat="@drawable/ic_name" />
    </LinearLayout>
        <LinearLayout
            android:id="@+id/editPhoneLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="160dp"
            android:layout_marginRight="30dp"
            android:orientation="horizontal">
            <TextView
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit Phone"
                android:textSize="20dp"
                android:layout_marginRight="15dp"
                android:textColor="@color/olxDark"
                android:background="#fff"
                android:padding="5dp"/>
            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fabEditPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                app:srcCompat="@drawable/ic_phone" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/editPasswordLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="90dp"
            android:layout_marginRight="30dp"
            android:orientation="horizontal">
            <TextView
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit Password"
                android:textSize="20dp"
                android:layout_marginRight="15dp"
                android:textColor="@color/olxDark"
                android:background="#fff"
                android:padding="5dp"/>
            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fabEditPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                app:srcCompat="@drawable/ic_email" />
        </LinearLayout>

    </RelativeLayout>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabEditInformation"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:clickable="true"
        android:layout_gravity="bottom|right"
        android:layout_margin="5dp"
        app:srcCompat="@drawable/ic_edit" />

</FrameLayout>
